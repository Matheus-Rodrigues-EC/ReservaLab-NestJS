generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int         @id @default(autoincrement())
  name            String
  surname         String?
  email           String      @unique
  password        String
  subject         String?
  rulets          String?
  shift           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  Reservation     Reservation[]

  @@map("users")
}

model Classroom {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  classType       String
  capacity        Int
  description     String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  Reservation     Reservation[]

  @@map("classrooms")
}

model Class {
  id              Int         @id @default(autoincrement())
  grade           Int  
  className       String 
  shift           String 
  description     String?  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  Reservation     Reservation[]

  @@map("classes")
}

model Reservation {
  id              Int         @id @default(autoincrement()) 
  User            User        @relation(fields: [userId], references: [id])
  userId          Int
  date            String
  Classroom       Classroom   @relation(fields: [classroomId], references: [id])
  classroomId     Int
  time            String
  purpose         String
  Class           Class       @relation(fields: [classId], references: [id])
  classId         Int
  description     String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@unique([date, time, classroomId])
  @@unique([date, time, classId])
  @@unique([date, time, userId])
  @@map("reservations")
}