version: '3.8'

services:
  # Banco de dados PostgreSQL para desenvolvimento
  postgres:
    image: postgres:15-alpine
    container_name: reservalab-postgres-dev
    restart: unless-stopped
    environment:
      POSTGRES_DB: reservalab_dev
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - postgres_dev_data:/var/lib/postgresql/data
    ports:
      - "5433:5432"  # Porta diferente para não conflitar com PostgreSQL local
    networks:
      - reservalab-dev-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d reservalab_dev"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Aplicação NestJS em modo desenvolvimento
  app:
    build:
      context: .
      dockerfile: Dockerfile.dev
    container_name: reservalab-app-dev
    restart: unless-stopped
    environment:
      NODE_ENV: development
      PORT: 4000
      DATABASE_URL: postgresql://postgres:postgres@postgres:5432/reservalab_dev?schema=public
      JWT_SECRET: development-jwt-secret
      PRISMA_SEED: "true"
    ports:
      - "4000:4000"
      - "9229:9229"  # Porta para debug
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - reservalab-dev-network
    volumes:
      - .:/app
      - /app/node_modules
      - ./uploads:/app/uploads

  # PgAdmin para administração do banco
  pgadmin:
    image: dpage/pgadmin4:latest
    container_name: reservalab-pgadmin-dev
    restart: unless-stopped
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@reservalab.com
      PGADMIN_DEFAULT_PASSWORD: admin
      PGADMIN_LISTEN_PORT: 80
    ports:
      - "4008:80"
    depends_on:
      - postgres
    networks:
      - reservalab-dev-network
    volumes:
      - pgadmin_dev_data:/var/lib/pgadmin

volumes:
  postgres_dev_data:
  pgadmin_dev_data:

networks:
  reservalab-dev-network:
    driver: bridge
